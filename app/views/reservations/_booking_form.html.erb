<!-- new reservation form -->
<!-- 'book' on listings/show will render this page -->

<hr>
<h2>Booking form</h2>
<!-- reservation#show path -->
<%= form_with scope: :reservation, url: listing_reservations_path(params[:id]), local: true do |f| %>
	
	<%= f.label :start_date %>
	<%= f.date_field :start_date%>

	<%= f.label :end_date %>
	<%= f.date_field :end_date%>

	<%= f.label :guest %>
	<%= f.number_field :guest %>
	
	<%= f.submit :submit %>

<%end%>

